#!/usr/bin/zsh

#stop annoying bell
unsetopt beep

#print banner text
$HOME/.banner

#syntax highlighting
source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

source $HOME/dots/config/zsh/custom_env_vars #unique to each system
source $HOME/dots/config/zsh/custom_aliases  #unique to each system

#----environment variables----
#system vars
export LC_ALL="en_US.UTF-8"
export LANG="C"
export TERMINAL="termite"
export TERM="xterm"
export EDITOR="vim"
export BROWSER="firefox"
#export PATH=$PATH

#----aliases----
# xclip
alias xclip='xclip -selection c'

#screenshot
alias screenshot='sleep 2; import -window root screenshot.png'

#lastpass
alias passplz='lpass show -pc'
