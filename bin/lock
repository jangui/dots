#!/bin/bash

i3lock \
       --inside-color='#000000' \
       --ring-color='#130b24' \
       --time-color='#8b8794' \
       --date-color='#8b8794' \
       --keyhl-color='#ffffff' \
       --bshl-color='#69000c' \
       \
       --verif-color='#ffffff' \
       --insidever-color='#000000' \
       --ringver-color='#ffffff' \
       --verif-text="success" \
       \
       --wrong-color='#000000' \
       --insidewrong-color='#000000' \
       --ringwrong-color='#520000' \
       --wrong-text="no no" \
       \
       --time-str="%I:%M:%S %P" \
       --date-str="%d/%m/%Y" \
       \
       --radius 120 \
       --blur=5 \
       -f \
       -e \
       -k 
